# ──────────────────────────────────────────────
# SoundHaus Backend Environment Configuration
# ──────────────────────────────────────────────
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ──────────────────────────────────────────────

# Gitea Configuration
GITEA_URL=http://gitea:3000
GITEA_PUBLIC_URL=http://localhost:3000
GITEA_ADMIN_TOKEN=your-gitea-admin-token
GITEA_CONTAINER_NAME=gitea

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUB_KEY=your-supabase-public-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Web App Login URL
VITE_WEB_AUTH_URL=http://localhost:5173/auth/desktop

# Database
DATABASE_URL=postgresql://user:password@host:port/dbname

# Webhook Configuration
GITEA_WEBHOOK_SECRET=generate-a-random-secret
WEBHOOK_BASE_URL=http://fastapi:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_SIGNUP=5/minute
RATE_LIMIT_UPLOAD=5/minute
